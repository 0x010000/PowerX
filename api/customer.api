@server(
    group: customer
    prefix: /api/customer/v1
)

service PowerX {
    @doc "查询客户"
    @handler GetCustomer
    get /customers/:id (GetCustomerRequest) returns (GetCustomerReply)

    @doc "批量同步客户"
    @handler BatchSyncCustomers
    post /op/sync-customers
}

type GetCustomerRequest {
    Id int64 `path:"id"`
}

type GetCustomerReply {
    Id int64 `json:"id"`
}